<h3>Args</h3>
<p>
<erl>
out(A) ->
    IsPost = webhelpers:isPost(A),
    case IsPost of
      true ->
        {ehtml, {pre, [], io_lib:format("GET:~p~nPOST:~p", [yaws_api:parse_query(A), yaws_api:parse_post(A)])}};
      false ->
        {ehtml, {pre, [], io_lib:format("GET:~p", [yaws_api:parse_query(A)])}}
    end.
</erl>
</p>

