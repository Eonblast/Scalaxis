# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
export DH_COMPAT=4

build: build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	export ANT_OPTS=-Dfile.encoding=utf8

	ln -s /usr/share/java/servlet-api-2.5.jar ./contrib/jetty-libs/servlet-api-2.5.jar
	ln -s /usr/share/java/scalaris/scalaris.jar ./contrib/
	JINTERFACE_VERSION=`ls /usr/share/java/scalaris/lib/ | grep ^OtpErlang- | sed "s|OtpErlang-||" | sed "s|.jar||"`; \
	ln -s /usr/share/java/scalaris/lib/OtpErlang-$$JINTERFACE_VERSION.jar ./contrib/
	ant build

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	rm -rf build_dir

	dh_clean

BUILD_DIR_TOMCAT5:=$(CURDIR)/debian/scalaris-svn-examples-wiki-tomcat5
BUILD_DIR_TOMCAT6:=$(CURDIR)/debian/scalaris-svn-examples-wiki-tomcat6
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

/etc/tomcat6/Catalina/localhost/scalaris-wiki.xml 


	mkdir -p $(BUILD_DIR_TOMCAT5)/etc/tomcat5/Catalina/localhost/
	mkdir -p $(BUILD_DIR_TOMCAT5)/usr/share/tomcat5/webapps
	cp -r simplewiki $(BUILD_DIR_TOMCAT5)/usr/share/tomcat5/webapps/scalaris-wiki
	mkdir -p $(BUILD_DIR_TOMCAT5)/etc/tomcat5/Catalina/localhost/
	echo "<Context path=\"/scalaris-wiki\" docBase=\"/usr/share/tomcat5/webapps/scalaris-wiki\" />" > 
$(BUILD_DIR_TOMCAT5)/etc/tomcat5/Catalina/localhost//etc/tomcat5/Catalina/localhost/scalaris-wiki.xml

	mkdir -p $(BUILD_DIR_TOMCAT6)/usr/share/tomcat6/webapps
	cp -r simplewiki $(BUILD_DIR_TOMCAT6)/usr/share/tomcat6/webapps/scalaris-wiki
	mkdir -p $(BUILD_DIR_TOMCAT6)/etc/tomcat6/Catalina/localhost/
	echo "<Context path=\"/scalaris-wiki\" docBase=\"/usr/share/tomcat6/webapps/scalaris-wiki\" />" > 
$(BUILD_DIR_TOMCAT6)/etc/tomcat6/Catalina/localhost//etc/tomcat6/Catalina/localhost/scalaris-wiki.xml

# Build architecture-independent files here.
binary-indep: build install
	# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf
	dh_installdocs
	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
	dh_installcron
	dh_installman
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
