<html>
<head>
<link rel="stylesheet" text="text/css" href="/contrail.css">
<title>Scalaris Cluster</title>
</head>
<body>

<h2>Scalaris Cluster</h>
<ul>
<% @instances.each do |instance| %>
  <li><a href="/scalaris/<%= instance.id %>"><%= instance.id %></a> <%= instance.user %></li>
<% end %>
</ul>

<fieldset style="border: 1px black solid">
<form action="/scalaris" method="post">
  <div style="margin:0;padding:0;display:inline">
    <input name="_method" type="hidden" value="post" />
  </div>
  <label for="user">User</label>:
  <input id="user" name="user" size="30" type="text" value="John" /><br />

  <input id="submit" name="commit" type="submit" value="Create New Cluster" />
</form>
</fieldset>

<a href="/">Main</a> <a href="/scalaris">Scalaris</a> <a href="/one">OpenNebula</a>
</body>
</html>
